{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "ts-node": {
    "files": true
  },
  "files": ["src/app.ts", "src/types/puppeteer-extensions.d.ts"],
  "include": ["src/**/*", "src/types/puppeteer-extensions.d.ts"],
  "exclude": ["node_modules", "dist"]
}
